pipeline {
    agent {
        node {
            label 'server_dev_debian'
        }
    }
    environment {
        SERVICE_NAME_FRONT = "vuejsfront"
        SERVICE_NAME_BACK = "pythonback"
    }
    stages {
        stage('Build') {
            steps {
                 script {
                    def output = sh(returnStdout: true, script: 'dir /b /a "proyectoFinal-vue-modulo6"')
                    if (output.contains('proyectoFinal-vue-modulo6')) {
                        sh 'cd proyectoFinal-vue-modulo6'
                    } else {
                        sh 'git clone https://github.com/rodcharo88/proyectoFinal-vue-modulo6'
                        sh 'cd proyectoFinal-vue-modulo6'
                    }
                    sh 'echo {{FULLNAME}}'
                    sh 'cd proyectoFinal-vue-modulo6 && npm install'
                    sh 'cd proyectoFinal-vue-modulo6 && docker-compose up -d'
                    sh 'docker tag rodcharo/modulo6:latest 192.168.0.12:8082/mod8/vuejsfront:v2.5'
                    sh 'docker push 192.168.0.12:8082/mod8/vuejsfront:v2.5'
                }
            }
        }

        stage('DEVELOPMENT') {
            environment {
                APP_ENV = 'DEV'
            }
            steps {
                sh 'echo $APP_ENV'
                sh 'curl http://localhost:80'
                sh 'cd proyectoFinal-vue-modulo6 && npm run build'
            }
        }

        stage('QA') {
            environment {
                APP_ENV = 'QA'
            }
            steps {
                sh 'echo $APP_ENV'
                sh 'grype 192.168.0.12:8082/mod8/vuejsfront:v2.5'
                sh 'curl http://localhost:3000'
                sh 'cd proyectoFinal-vue-modulo6 && npm run lint'
            }
        }

        stage('PRODUCTION') {
            environment {
                APP_ENV = 'PROD'
            }
            steps {
                sh 'echo $APP_ENV'
                sh 'docker pull 192.168.0.12:8082/mod8/vuejsfront:v2.5'
                sh 'docker run -d --name imagenexus -p 8088:80 192.168.0.12:8082/mod8/vuejsfront:v2.5'
            }
        }
    }
}
